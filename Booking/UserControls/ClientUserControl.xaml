<UserControl x:Class="Booking.UserControls.ClientUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Booking.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Full Name:" 
                       Margin="0, 5, 0, 5"/>
            <TextBox Text="{Binding Client.FullName, UpdateSourceTrigger=PropertyChanged}"/>
            
            <TextBlock Text="Contact Email:" 
                       Margin="0, 5, 0, 5"/>
            <TextBox Text="{Binding Client.ContactEmail, UpdateSourceTrigger=PropertyChanged}"/>
            
            <TextBlock Text="Contact Number:" 
                       Margin="0, 5, 0, 5"/>
            <TextBox Text="{Binding Client.ContactNumber, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</UserControl>
